{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs16",
    "ignore": [
        "**/.firebase/**",
        "**/.next/cache/**",
        "**/cypress/**",
        "**/firebase/**",
        "**/functions/**",
        "**/node_modules/**",
        "**/public/**",
        "**/src/components/**",
        "**/src/pages/**",
        "**/src/styles/**",
        "**/src/utils/**",
        "**/test-data/**",
        "**/.env.*",
        "**/.eslintrc",
        "**/.eslintrc.*",
        ".firebaserc",
        ".git",
        ".gitignore",
        "**/cypress.*",
        "**/*.log",
        "**/firebase.json",
        "**/firestore.*",
        "**/package-lock.*",
        "**/postcss.*",
        "**/README.*",
        "**/storage.*",
        "**/tailwind.*",
        "**/yarn.*",
        "*.yaml",
        "Dockerfile"
      ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
